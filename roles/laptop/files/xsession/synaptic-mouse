# Set touchpad settings
synclient \
	VertEdgeScroll=0 \
	HorizEdgeScroll=0 \
	VertTwoFingerScroll=1 \
	HorizTwoFingerScroll=1 \
	TapButton1=0 \
	TapButton2=0 \
	TapButton3=0

# Disable vertical and horizontal edge scrolling
# VertEdgeScroll=0 HorizEdgeScroll=0
#
# Enable vertical and horizontal two finger scrolling
# VertTwoFingerScroll=1 HorizTwoFingerScroll=1
#
# Disable tap buttons
# TapButton1=0 TapButton2=0 TapButton3=0
